  before_all do
	cocoapods(podfile: "./Example")
	ensure_git_status_clean
    
  end

  desc "Runs all the tests"
  lane :test do
    scan(
    	workspace: "./Example/ContainerViewManager.xcworkspace"
    )
  end

  after_all do |lane|
    # This block is called, only if the executed lane was successful

    # slack(
